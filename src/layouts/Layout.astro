---
import Icon from '../components/Icon.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Developer from Eastern Maine. Building products, leading teams, and occasionally making music." } = Astro.props;
const siteUrl = "https://ryanprescott.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8" />
    <script is:inline>
      (function() {
        var theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
        document.documentElement.classList.remove('no-js');
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={`${siteUrl}/ryan-p-headshot.jpeg`} />
    <meta property="og:site_name" content="Ryan Prescott" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/ryan-p-headshot.jpeg`} />

    <!-- JSON-LD -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Ryan Prescott",
        "url": "https://ryanprescott.com",
        "image": "https://ryanprescott.com/ryan-p-headshot.jpeg",
        "jobTitle": "Head of Engineering",
        "worksFor": {
          "@type": "Organization",
          "name": "Indexify"
        },
        "sameAs": [
          "https://github.com/ryanprescott",
          "https://linkedin.com/in/ryanprescott",
          "https://open.spotify.com/artist/1qYoSDz9q1e0PM20jL6fRu"
        ]
      }
    </script>

    <title>{title}</title>

    <!-- Umami Analytics -->
    <script defer src="https://cloud.umami.is/script.js" data-website-id="6c832e66-9f70-4086-91ae-50978b4a5435"></script>
  </head>
  <body>
    <header>
      <div class="container">
        <a href="/" class="logo">ryan prescott</a>
        <button class="theme-toggle" aria-label="Toggle dark mode" id="theme-toggle">
          <Icon name="sun" class="sun" />
          <Icon name="moon" class="moon" />
        </button>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <p class="footer-quirk">"Let's make it happen."</p>
        <p>&copy; {new Date().getFullYear()} Ryan Prescott. Built using AI - because did you really think I was gonna do this all by myself?</p>
      </div>
    </footer>

    <script is:inline>
      document.getElementById('theme-toggle')?.addEventListener('click', function() {
        var current = document.documentElement.getAttribute('data-theme');
        var next = current === 'dark' ? 'light' : 'dark';
        document.documentElement.setAttribute('data-theme', next);
        localStorage.setItem('theme', next);
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
